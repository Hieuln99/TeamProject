@model Project.Models.CustomUser
@{
    ViewBag.Title = "EditTrainerAcc";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="style">
    <h1 class="display-4">Updating</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {

        <div class="form-group">
            @Html.LabelFor(m => m.name, htmlAttributes: new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => m.UserName, htmlAttributes: new { @class = "font-weight-bold", disabled = "disabled" })
            @Html.HiddenFor(m => m.UserName,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>



        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", Type = "hidden" } })
        @Html.EditorFor(m => m.PasswordHash, new { htmlAttributes = new { @class = "form-control", Type = "hidden" } })
        @Html.EditorFor(m => m.SecurityStamp, new { htmlAttributes = new { @class = "form-control", Type = "hidden" } })
        @Html.EditorFor(m => m.age, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.toeic, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.dob, new { htmlAttributes = new { @class = "form-control", Value = "1991-01-17", Type = "hidden" } })
        @Html.EditorFor(m => m.edu, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.language, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.exp, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.department, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.location, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.type, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.workplace, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })
        @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control", Value = "0", Type = "hidden" } })

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>


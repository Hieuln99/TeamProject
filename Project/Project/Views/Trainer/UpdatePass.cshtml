@model  Project.Models.ChangePass

<section>
    @using (Html.BeginForm(FormMethod.Post))
    {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b>@Html.LabelFor(m => m.currentpass)</b>
            @Html.TextBoxFor(m => m.currentpass, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.currentpass, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <b>@Html.LabelFor(m => m.newpass)</b>
            @Html.TextBoxFor(m => m.newpass, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.newpass, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <b>@Html.LabelFor(m => m.confirmpass)</b>
            @Html.TextBoxFor(m => m.confirmpass, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.confirmpass, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }

</section>

@model IEnumerable<Project.Models.CustomUser>
@{
    ViewBag.Title = "TraineeAcc";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">Trainee Manager Accounts</h1>
    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];
    }
    @Html.Partial("_message")
    <input type="text" id="myInputT" placeholder="Search by names.." class="form-control mb-3">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>

                <th scope="col">@Html.DisplayNameFor(model => model.name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.age)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.dob)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.edu)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.language)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.toeic)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.exp)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.department)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.location)</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var b in Model)
            {
            <tr>

                <td>@Html.DisplayFor(model => b.name)</td>
                <td>@Html.DisplayFor(model => b.age)</td>
                <td>@Html.DisplayFor(model => b.dob)</td>
                <td>@Html.DisplayFor(model => b.edu)</td>
                <td>@Html.DisplayFor(model => b.language)</td>
                <td>@Html.DisplayFor(model => b.toeic)</td>
                <td>@Html.DisplayFor(model => b.exp)</td>
                <td>@Html.DisplayFor(model => b.department)</td>
                <td>@Html.DisplayFor(model => b.location)</td>
                <td>
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("AssignCourse","Staff",new { id = b.Id})">
                        Assign
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("TraineeEdit","Staff",new { id = b.Id})">
                        Edit
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-danger btn-sm" data-trainee="@String.Format("{0}|{1}",
                                    b. ToSeparated("|"),
                                    Url.Action("DeleteTraineeAcc", new { id = b.Id}))" data-target="#delete" data-toggle="modal">Delete</a>
                </td>
            </tr>
            }
        </tbody>

    </table>




    @section alertdialog
    {
        <div class="modal fade" tabindex="-1" id="delete" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <form id="deleteForm" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete a Trainee</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="maxwith">

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Name</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="name" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Age</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="age" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">DoB</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="dob" /></th>
                                </tr>
                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Education</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="edu" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Progaming Language</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="language" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">TOEIC</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="toeic" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Experience</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="exp" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Department</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="department" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Location</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="location" /></th>
                                </tr>
                            </table>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            </div>
                        </div>



                    </form>
                </div>
            </div>
        </div>
    </div>

    }

    @section scripts
    {
        <script type="text/javascript">
            $('document').ready(function () {
                $('a[data-trainee]').on('click', function (evt) {
                    let d = $(this).attr('data-trainee').split("|");
                    console.log(d);
                    $('#id').attr('value', d[0]);
                    $('#name').attr('value', d[1]);
                    $('#age').attr('value', d[2]);
                    $('#dob').attr('value', d[3]);
                    $('#edu').attr('value', d[4]);
                    $('#language').attr('value', d[5]);
                    $('#toeic').attr('value', d[6]);
                    $('#exp').attr('value', d[7]);
                    $('#department').attr('value', d[8]);
                    $('#location').attr('value', d[9]);

                    $('#deleteForm').attr('action', d[10]);
                });
            });
            $('#myInputT').on('keyup', function (event) {
                event.preventDefault();
                /* Act on the event */
                console.log(1);
                var input = $(this).val().toLowerCase();
                $('#myTable tr').filter(function () {

                    $(this).toggle($(this).text().toLowerCase().indexOf(input) > -1);

                });
            });
        </script>
    }


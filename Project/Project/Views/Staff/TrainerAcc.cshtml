@model IEnumerable<Project.Models.CustomUser>
@{
    ViewBag.Title = "TrainerAcc";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">Trainer Manager Accounts</h1>
    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];
    }
    @Html.Partial("_message")
    <input type="text" id="myInputT" placeholder="Search by names.." class="form-control mb-3">
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.type)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.workplace)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var b in Model)
            {
            <tr>
                <td>@Html.DisplayFor(model => b.name)</td>
                <td>@Html.DisplayFor(model => b.type)</td>
                <td>@Html.DisplayFor(model => b.workplace)</td>
                <td>@Html.DisplayFor(model => b.PhoneNumber)</td>

                <td>
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("AssignCourseT","Staff",new { id = b.Id})">
                        Assign
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-success btn-sm" href="@Url.Action("TrainerEdit",new { id = b.Id})">
                        Edit
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-danger btn-sm" data-trainer="@String.Format("{0}|{1}",
                                    b. ToSeparatedt("|"),
                                    Url.Action("DeleteTrainerAcc", new { id = b. Id}))" data-target="#delete" data-toggle="modal">Delete</a>
                </td>
            </tr>
            }
        </tbody>

    </table>




    @section alertdialog
    {
        <div class="modal fade" tabindex="-1" id="delete" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <form id="deleteForm" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete a Trainer</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="maxwith">

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Name</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="name" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Type</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="type" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Work Place</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="workplace" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Phone Number</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="PhoneNumber" /></th>
                                </tr>

                            </table>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            </div>
                        </div>



                    </form>
                </div>
            </div>
        </div>
    </div>

    }

    @section scripts
    {
        <script type="text/javascript">
            $('document').ready(function () {
                $('a[data-trainer]').on('click', function (evt) {
                    let d = $(this).attr('data-trainer').split("|");
                    console.log(d);
                    $('#name').attr('value', d[0]);
                    $('#type').attr('value', d[1]);
                    $('#workplace').attr('value', d[2]);
                    $('#PhoneNumber').attr('value', d[3]);
                    $('#deleteForm').attr('action', d[4]);
                });
            });
            $('#myInputT').on('keyup', function (event) {
                event.preventDefault();
                /* Act on the event */
                console.log(1);
                var input = $(this).val().toLowerCase();
                $('#myTable tr').filter(function () {

                    $(this).toggle($(this).text().toLowerCase().indexOf(input) > -1);

                });
            });
        </script>
    }


@model Project.Models.CourseCategory
@{
    ViewBag.Title = "CreateCat";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="container">
    <h1 class="display-4 text-center">New Category</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {
        //@Html.HiddenFor(m => m.id)
        
        <div class="form-group">
            @Html.LabelFor(m => m.name,
              htmlAttributes: new { @class = "font-weight-bold" })



            @Html.EditorFor(m => m.name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>



        <div class="form-group">
            @Html.LabelFor(m => m.description, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.description,
            new
            {
              htmlAttributes = new { @class = "form-control", min = "0" }
            })
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>


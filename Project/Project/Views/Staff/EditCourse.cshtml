@model  Project.Models.Course
@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="container">
    <h1 class="display-4">Updating</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {
        @*@Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.ClassId, htmlAttributes: new { @class = "font-weight-bold" })
                @Html.DropDownListFor(m => m.ClassId,
                                      (IEnumerable<SelectListItem>)ViewBag.Students,
                                      htmlAttributes: new { @class = "form-control" })
            </div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.name, htmlAttributes: new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.description, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.description,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CatId, htmlAttributes: new { @class = "font-weight-bold" })
            @Html.DropDownListFor(m => m.CatId,
                                  (IEnumerable<SelectListItem>)ViewBag.categories,
                                  htmlAttributes: new { @class = "form-control" })
        </div>
        

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>

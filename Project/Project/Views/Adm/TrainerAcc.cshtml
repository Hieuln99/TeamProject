@model IEnumerable<Project.Models.Trainer>
@{
    ViewBag.Title = "TrainerAcc";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="content">
    <div class="container">
        <h1 class="py-3" align="center">Trainer Manager</h1>

        @if (TempData["message"] != null)
        {
            ViewBag.Message = TempData["message"];
        }
        @Html.Partial("_message")
    <table class="table table-bordered table-dark">
        <thead class="thead-dark">

            <tr>
                
                <th scope="col">@Html.DisplayNameFor(model => model.name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.type)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.workplace)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.phonenumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.email)</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(model => m.name)</th>
                    <td>@Html.DisplayFor(model => m.type)</td>
                    <td>@Html.DisplayFor(model => m.workplace)</td>
                    <td>@Html.DisplayFor(model => m.phonenumber)</td>
                    <td>@Html.DisplayFor(model => m.email)</td>
                    <td>
                        <a type="button" class="btn btn-success btn-sm"
                           href="@Url.Action("EditTrainerAcc", new {id = m.id })">Edit</a>
                    </td>


                    <td>
                        <a type="button" class="btn btn-danger btn-sm"
                           data-trainer="@String.Format("{0}|{1}",
                           m.ToSeparatedString("|"),
                           Url.Action("DeleteTrainerAcc", new {id = m.id }))"
                           data-toggle="modal" data-target="#delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
    @section alertdialog
    {
        <div class="modal fade" tabindex="-1" id="delete" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <form id="deleteForm" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete a Trainer</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="maxwith">

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Name</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="name" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">User Name</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="username" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Password</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="password" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Type</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="type" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Working Place</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="workplace" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Phone Number</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="phonenumber" /></th>
                                </tr>

                                <tr style="height: 40px">
                                    <th scope="col" width="20%">Email</th>
                                </tr>
                                <tr>
                                    <th><input type="text" class="form-control" id="email" /></th>
                                </tr>

                            </table>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            </div>
                        </div>



                    </form>
                </div>
            </div>
        </div>


    }

    @section scripts
    {
        <script type="text/javascript">
            $('document').ready(function () {
                $('a[data-trainer]').on('click', function (evt) {
                    let d = $(this).attr('data-trainer').split("|");
                    console.log(d);
                    $('#id').attr('value', d[0]);
                    $('#name').attr('value', d[1]);
                    $('#username').attr('value', d[2]);
                    $('#password').attr('value', d[3]);
                    $('#type').attr('value', d[4]);
                    $('#workplace').attr('value', d[5]);
                    $('#phonenumber').attr('value', d[6]);
                    $('#email').attr('value', d[7]);

                    $('#deleteForm').attr('action', d[8]);
                });
            });
        </script>
    }
